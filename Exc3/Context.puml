@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_WITH_LEGEND()

' Участники
Person(Клиент, "Клиент", "Пользователь интернет-банка или сайта для подачи заявок и управления депозитами")
Person(Менеджер_колцентра, "Менеджер кол-центра", "Обрабатывает заявки клиентов, поступившие с сайта")
Person(Менеджер_бекофиса, "Менеджер бэк-офиса", "Проверяет и подтверждает условия депозитов")

' Основные системы
System(InternetBank, "Сайт/Интернет-банк", "Платформа, позволяющая клиентам подавать заявки и управлять депозитами")
System(RequestService, "Сервис обработки заявок", "Система, которая обрабатывает заявки и готовит данные для АБС")
System(ABS, "АБС", "Система управления депозитами и хранения данных")
System(SmsGateway, "СМС-шлюз", "Система отправки уведомлений клиентам")
System(CallCenter, "Система кол-центра", "Система для обработки заявок клиентов менеджерами")

' Взаимодействия
Rel(Клиент, InternetBank, "Подача заявки, управление депозитами")
Rel(InternetBank, RequestService, "Передача заявок на обработку")
Rel(RequestService, ABS, "Передача данных для управления депозитами")
Rel(RequestService, SmsGateway, "Отправка уведомлений клиенту")
Rel(SmsGateway, Клиент, "СМС-уведомления")
Rel(Менеджер_колцентра, CallCenter, "Обработка заявок клиентов")
Rel(CallCenter, RequestService, "Передача данных заявок на обработку")
Rel(Менеджер_бекофиса, RequestService, "Проверка и подтверждение заявок")
@enduml
