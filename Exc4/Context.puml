@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_WITH_LEGEND()

' Участники
Person(Клиент, "Клиент", "Пожилой клиент, звонящий в кол-центр")
Person(СотрудникКолцентра, "Сотрудник кол-центра", "Обрабатывает звонки клиентов в основном кол-центре")
Person(СотрудникПартнера, "Сотрудник партнёрского кол-центра", "Обрабатывает звонки клиентов через внешнюю систему")

' Основные системы
System(КолЦентр, "Система кол-центра", "Внутренняя система для обработки звонков клиентов")
System(ПартнерскаяСистема, "Партнёрская система", "Внешняя система для обработки звонков партнёров через SFTP")
System(СервисСтавок, "Сервис управления ставками", "Предоставляет актуальные данные по депозитным ставкам")
System(ABS, "АБС", "Содержит бизнес-логику и данные о ставках")

' Взаимодействия
Rel(Клиент, КолЦентр, "Запрос информации о ставках")
Rel(Клиент, ПартнерскаяСистема, "Запрос информации о ставках")
Rel(СотрудникКолцентра, КолЦентр, "Работа с системой для обработки звонков")
Rel(СотрудникПартнера, ПартнерскаяСистема, "Работа с системой для обработки звонков")
Rel(КолЦентр, СервисСтавок, "Получение актуальных ставок через API")
Rel(СервисСтавок, ABS, "Обновление данных о ставках")
Rel(СервисСтавок, ПартнерскаяСистема, "Передача файлов со ставками через SFTP")
@enduml
